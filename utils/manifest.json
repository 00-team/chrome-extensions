{
    "name": "Utils",
    "version": "1.0",
    "manifest_version": 3,
    "description": "useful utils",

    "icons": {
        "16": "images/00.png",
        "32": "images/00.png",
        "48": "images/00.png",
        "128": "images/00.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://*.blenderkit.com/asset-gallery*",
                "https://*.blenderkit.com/asset-gallery-detail*"
            ],
            "js": ["src/blenderkit.js"],
            "run_at": "document_start"
        }
    ],

    "permissions": ["downloads", "nativeMessaging"],

    "background": {
        "service_worker": "src/worker.js"
    }
}
